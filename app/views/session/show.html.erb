<h1>Log In</h1>

<%= form_tag("/session", method: :put) do %>

  <%= label_tag :username %>
  <%= text_field_tag :username %>

  <%= label_tag :password %>
  <%= text_field_tag :password %>

  <%= submit_tag "Log in" %>

<% end %>

<%= link_to "Create New Account", new_session_path %>

<div class="fb-login-button" data-width="200" data-max-rows="1" data-size="large" data-button-type="login_with" data-show-faces="false" data-auto-logout-link="false" data-use-continue-as="false">Log In With Facebook</div>
